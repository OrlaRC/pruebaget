{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    {
      "src": "/_next/static/(?:[^/]+/pages|chunks|runtime|css|media)/.+",
      "headers": { "cache-control": "public, max-age=31536000, immutable" }
    },
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/auth/callback",
      "dest": "/src/index.html",
      "headers": { "cache-control": "no-cache" }
    },
    {
      "src": "/(.*)",
      "dest": "/src/index.html",
      "headers": { "cache-control": "no-cache" }
    }
  ]
}